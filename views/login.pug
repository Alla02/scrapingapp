extends layout
block variables
    include variables
block content
    main.my-form
      .cotainer
        .row.justify-content-center
          .col-md-8
            .card
              .card-header Вход
              .card-body
                form(name='my-form', action='/login', method='post')
                  .form-group.row
                    label.col-md-4.col-form-label.text-md-right Логин / Email:
                    .col-md-6
                        input(type='text', name='login' class='form-control required', placeholder='Логин', autofocus)
                  .form-group.row
                    label.col-md-4.col-form-label.text-md-right Пароль:
                    .col-md-6
                        input(type='password', name='password' class='form-control required', placeholder='Пароль')
                  .col-md-6.offset-md-4
                    button.btn.btn-primary(type='submit')
                      | Войти

                #message
                if message
                h1.text-center.error-message #{message}


