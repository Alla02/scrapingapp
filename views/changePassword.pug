extends layout
block variables
    include variables
block content
    //h3=title
    div.container
        div.row
            div.login
                h2.text-center.login-title Изменение пароля
                div.account-wall
                //img(class='profile-img', src='images/1.png',width='200px',height='200px')
                form(id="changePassword" class='form-signin', action='/changePassword', method='POST')
                    //label(class="text-form") Старый пароль:
                    //input(type='text', name='oldpassword' class='form-control required', placeholder='Старый пароль',required, autofocus)
                    label(class="text-form") Новый пароль:
                    input(type='password', name='newpassword1' id='newpassword1' class='form-control required', placeholder='Новый пароль', required, autofocus)
                    label(class="text-form") Новый пароль еще раз:
                    input(type='password', name='newpassword2' class='form-control required', placeholder='Новый пароль еще раз', required)
                    if (!message)
                        h2=message

                    button(class='btn btn-lg btn-primary btn-block mt-4', type='submit') Сохранить
                    span.clearfix

                //a(href='/signup', class='text-center new-account') Create an account
                #message
                if message
                h1.text-center.error-message #{message}